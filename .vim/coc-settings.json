{
	"codeLens.enable": true,
	"diagnostic.errorSign": "‚ùó",
	"diagnostic.warningSign": "‚ö†Ô∏è",
	"diagnostic.infoSign": "‚ÑπÔ∏è",
	"diagnostic.hintSign": "üí°",
	"languageserver": {
		"clangd": {
		  "command": "clangd-11",
		  "args": ["--background-index", "--log=verbose"],
		  "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
		  "filetypes": ["c", "cpp", "objc", "objcpp"]
		}
		,
		"solidity": {
			//"command": "/home/trapni/work/solidity/build/solls/solls",
			//"args": [],
			"host": "127.0.0.1",
			"port": 5050,
			"trace.server": "verbose",
			"rootPatterns": ["compile_commands.json", ".git/"],
			"settings": {
				"evm": "constantinople",
				"remapping": "foo=bar,foo2=bar2"
			},
			"filetypes": ["solidity"]
		}
		,
		"bash": {
		  "command": "bash-language-server",
		  "args": ["start"],
		  "filetypes": ["sh"],
		  "ignoredRootPaths": ["~"]
		}
	}
}
